<!DOCTYPE html>
<html lang="pl-PL">
<head>
    <meta charset="UTF-8">
    <title>
        {% block title %}Mensański Typer{% endblock %}
    </title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.css.map') }}">
    {% endblock %}
</head>
<body>
{% include('_partials/top_label.html.twig') %}
{% include('_partials/flashes.html.twig') %}
<div class="container pb-4">
    {% block body %}
    {% endblock %}
</div>
{% block footer %}
    <nav class="fixed-bottom navbar-light bg-light text-center">
        <div class="container-fluid text-center">
            <span class="navbar-text">
                Copyright © {{ "now"|date("Y") }}. Mensański Typer. Wszystkie prawa zastrzeżone
            </span>
        </div>
    </nav>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('assets/js/bootstrap.js') }}"></script>
    <script src="{{ asset('assets/js/bootstrap.js.map') }}"></script>
{% endblock %}
</body>
</html>
