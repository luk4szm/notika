{% extends 'base.html.twig' %}
{% set seasons = get_active_seasons() %}

{% block title %}{{ 'game.bets'|trans }} - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">Mensa≈Ñski Typer</li>
                        <li class="breadcrumb-item active" aria-current="page">{{ 'bet.missing'|trans }}</li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="row">
            {% include 'bet/_partials/left_column.html.twig' %}
            <div class="col-lg-9">
                {% block content %}
                    <div class="card">
                        <div class="card-header">
                            {{ 'bet.missing'|trans }}
                        </div>
                        <div class="card-body">
                            {{ dump(games) }}
                        </div>
                    </div>
                {% endblock %}
            </div>
        </div>
    </div>
{% endblock %}