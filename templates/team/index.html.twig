{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">Mensa≈Ñski Typer</li>
                        <li class="breadcrumb-item">{{ 'breadcump.team'|trans }}</li>
                        {% if team is defined %}
                            <li class="breadcrumb-item">{{ team.name }}</li>
                        {% endif %}
                    </ol>
                </nav>
            </div>
        </div>
